@using Open.Sentry.Extensions
@model Open.Core.IPaginatedList<Open.Facade.Quantity.CurrencyView>

@{
    ViewBag.Title = "Currencies";
    Layout = "_IndexPartial";
}

@section Create {
    <a asp-action=Create>Create New</a>
}

<body>
    <table class="table">
        @{ var dummy = Model.FirstOrDefault();}
        <thead>
            <tr>
                @Html.SortColumnHeaderFor(model => dummy.IsoCode, ViewData["SortAlpha3"])
                @Html.SortColumnHeaderFor(model => dummy.Symbol, ViewData["SortAlpha2"])
                @Html.SortColumnHeaderFor(model => dummy.Name, ViewData["SortName"])
                @Html.SortColumnHeaderFor(model => dummy.ValidFrom, ViewData["SortValidFrom"])
                @Html.SortColumnHeaderFor(model => dummy.ValidTo, ViewData["SortValidFrom"])
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.IsoCode)</td>
                    <td>@Html.DisplayFor(modelItem => item.Symbol)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.ValidFrom)</td>
                    <td>@Html.DisplayFor(modelItem => item.ValidTo)</td>
                    @Html.EditDetailDeleteFor(modelItem => item.IsoCode)
                </tr>
            }
        </tbody>
    </table>
</body>
