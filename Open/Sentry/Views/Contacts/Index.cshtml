@using Open.Sentry.Extensions
@model Open.Core.IPaginatedList<Open.Facade.Party.AddressView>

@{
    ViewBag.Title = "Contacts";
    Layout = "_IndexPartial";
}

@section Create {
    <t>Create new </t>
    <a asp-action=CreateWeb>Web</a>
    <a asp-action=CreateEmail>Email</a>
    <a asp-action=CreateTelecom>Telecom</a>
    <a asp-action=Create>Address</a>
}

<body>
    <table class="table">
        @{ var dummy = Model.FirstOrDefault();}
        <thead>
            <tr>
                @Html.SortColumnHeaderFor(model => dummy.AddressType, ViewData["SortAddressType"])
                @Html.SortColumnHeaderFor(model => dummy.Contact, ViewData["SortToString"])
                @Html.SortColumnHeaderFor(model => dummy.ValidFrom, ViewData["SortValidFrom"])
                @Html.SortColumnHeaderFor(model => dummy.ValidTo, ViewData["SortValidFrom"])
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.AddressType)</td>
                    <td>@Html.DisplayFor(modelItem => item.Contact)</td>
                    <td>@Html.DisplayFor(modelItem => item.ValidFrom)</td>
                    <td>@Html.DisplayFor(modelItem => item.ValidTo)</td>
                    @Html.EditDetailDeleteFor(modelItem => item.ID)
                </tr>
            }
        </tbody>
    </table>
</body>
