@using Open.Data.Bank
@using Open.Sentry.Extensions
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<style>
    .logOutButton {
        background-color: lightgrey;
    }
    .logOutButton:hover {
        background-color: white;
    }

</style>

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li>
                <a class="nav-link" href="@Url.Action("Index", "Manage")" title ="Manage">@User.GetFirstName() @User.GetLastName()</a>
            </li>
            <li>
                <button type="submit" class="btn btn-primary btn-sm" class="btn logOutButton btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">          
        <li><a class="nav-link" href="@Url.Action("Register", "Account")">Register</a></li>
        <li><a class="nav-link" href="@Url.Action("Login", "Account")">Log in</a></li>
    </ul>
}
